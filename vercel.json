{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/telegram/webhook",
            "dest": "/api/telegram/webhook.ts"
        },
        {
            "src": "/api/telegram/auth",
            "dest": "/api/telegram/auth.ts"
        },
        {
            "src": "/api/telegram/callback",
            "dest": "/api/telegram/callback.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}